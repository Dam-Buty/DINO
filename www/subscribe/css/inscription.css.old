body {
    text-align: center;
}

.container-inscription {
    width: 400px;

    -moz-border-radius:7px;
    -webkit-border-radius:7px;
    border-radius:7px;

    border: 2px solid black;
    
    background-image: url("../img/paper.jpg");
    
}

.header-inscription {
    font-family: 'Kavoon', cursive;
    font-size: 1.6em;
    color: white;
    
    background-color: #2C427C;
    
    padding: 20px 10px 10px 10px;
}

.header-inscription input {
    font-family: 'Bad Script', cursive;
    font-size: 1em;
    font-weight: bold;
    color: #2C427C;
    
    text-align: center;
    
    -moz-border-radius:3px;
    -webkit-border-radius:3px;
    border-radius:3px;
    
    padding: 2px 2px 2px 2px;
}

.wrapper-inscription {
    padding: 15px 10px;
}

.wrapper-inscription h1 {
    font-family: 'Bad Script', cursive;
    font-size: 1em;
    padding: 15px 20px 15px 20px;
    
    line-height: 1.2;
    background-image: -webkit-linear-gradient(rgba(0,0,0,.2) 1px, transparent 1px);
    background-image: -moz-linear-gradient(rgba(0,0,0,.2) 1px, transparent 1px);
    background-image: linear-gradient(rgba(0,0,0,.2) 1px, transparent 1px);
    background-size: 100% 1.2em;
    background-position: 0 1em;
    background-origin: content-box;
    font-size: 110%;
    
    margin: 0 auto;
    width: 80%;

}

.wrapper-inscription p {
    font-family: 'Happy Monkey', cursive;
    font-size: 1em;
    font-weight: bold;
    
    margin-top: 0;
    margin-bottom: 0;
}

.wrapper-inscription input {
    width: 80%;
    font-family: 'Happy Monkey', cursive;
    font-size: 1.2em;
    
    -moz-border-radius:7px;
    -webkit-border-radius:7px;
    border-radius:7px;
    
    padding: 0 7px;
    
    background-color: #FFEBC2;
}

.bouton {
    cursor: pointer;

    -moz-box-shadow:inset 0px 1px 0px 0px #dcecfb;
    -webkit-box-shadow:inset 0px 1px 0px 0px #dcecfb;
    box-shadow:inset 0px 1px 0px 0px #dcecfb;
    background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #bddbfa), color-stop(1, #80b5ea) );
    background:-moz-linear-gradient( center top, #bddbfa 5%, #80b5ea 100% );
    filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#bddbfa', endColorstr='#80b5ea');
    background-color:#bddbfa;
    -moz-border-radius:6px;
    -webkit-border-radius:6px;
    border-radius:6px;
    border:1px solid #84bbf3;
    display:inline-block;
    color:#ffffff;
    font-family:arial;
    font-size:15px;
    font-weight:bold;
    padding:6px 24px;
    text-decoration:none;
    text-shadow:1px 1px 0px #528ecc;
