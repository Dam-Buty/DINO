    background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #80b5ea), color-stop(1, #bddbfa) );
    background:-moz-linear-gradient( center top, #80b5ea 5%, #bddbfa 100% );
    filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#80b5ea', endColorstr='#bddbfa');
    background-color:#80b5ea;
    }.classname:active {
    position:relative;
    top:1px;
/* This imageless css button was generated by CSSButtonGenerator.com */
}

.wrapper-simulation {
    display: none;
    text-align: left;
    width: 100%;
}

.wrapper-simulation h1 {
    width: 100%;
    font-family: 'Happy Monkey', cursive;
    font-size: 1.3em;
    
    margin-top: 0px;
    margin-bottom: 0px;
    padding-left: 5%;
    padding-right: 5%;
}

.wrapper-simulation ul {
    padding-left: 0px;
}

.wrapper-postit {
    display: inline-block;
    width: 49%;
}

.header-simulation {
    width: 100%;
    height: 98px;
    padding-left: 5%;
    padding-right: 5%;
    
    background-image: url("../img/paper_simulation_top.png");
    background-size: 100% 100%;
    box-sizing: border-box;
}

.body-simulation {
    width: 100%;
    padding-left: 5%;
    padding-right: 5%;
    padding-bottom: 5%;

    background-image: url("../img/paper_simulation_body.png");
    background-size: 100% 100%;
    box-sizing: border-box;
}

.list-simulation {
    list-style-type: none;
}

.list-simulation li {
    border-style: solid;
    border-color: black;
    border-width: 1px 1px 0px 1px;
}

.list-simulation li:last-child {
    border-width: 1px 1px 1px 1px;
}

.list-simulation li h2 {
    margin-top: 0px;
    margin-bottom: 0px;
    
    font-family: 'Happy Monkey', cursive;
    font-size: 1em;
    color: white;
    
    padding: 3px 10px 3px 10px;
}

#paquete-1 h2 {
    background-color: #77BEEE;
}

#paquete-2 h2 {
    background-color: #889BA8;
}

#paquete-3 h2 {
    background-color: #8B883F;
}


.list-simulation p {
    font-family: 'Podkova', serif;
    margin-top: 0px;
    margin-bottom: 0px;
}

.list-simulation table tr td:last-child {
    border-style: solid;
    border-color: black;
    border-width: 0 0 0 1px;
}

.costo {
    text-align: center;
}

.simulation-tip {
    font-size: 0.7em;
    float: right;
    font-style: italic;
}

.simulation-data {
    font-weight: bold;
}
